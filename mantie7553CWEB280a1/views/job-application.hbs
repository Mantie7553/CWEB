<h1>{{title}}</h1>
<form id="career-form" enctype="multipart/form-data">
    <div id="nameField">
        <label for="nameInput">Name:</label>
        <input type="text" name="nameField" id="nameInput" required placeholder="John Doe"/>
    </div>
    <div id="emailField">
        <label for="emailInput">Email:</label>
        <input type="email" name="emailInput" id="emailInput" placeholder="email@domain" required />
    </div>
    <div id="phoneField">
        <label for="phoneInput">Phone:</label>
        <input type="text" name="phoneInput" id="phoneInput"
               required pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="###-###-####"/>
    </div>
    <div id="positionField">
        <label for="positionInput">Position:</label>
        <input type="text" name="positionInput" id="positionInput" required/>
    </div>
    <div id="positionField">
        <label for="positionInput">Upload Resume:</label>
        <input type="file" name="positionInput" id="positionInput" required />
    </div>
    <div id="buttons">
        <button type="submit">Submit</button>
        <button type="button">Clear</button>
    </div>
</form>
